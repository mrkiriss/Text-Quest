<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/v"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6E0E0"
    android:backgroundTint="#FFFFFF"
    android:foregroundTint="#FFFFFF"
    android:orientation="vertical"
    tools:context=".Game">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/button_mood"
                style="@android:style/Widget.DeviceDefault.Button.Borderless"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center" />

            <ProgressBar
                android:id="@+id/progress_mood"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:background="#E1DDDD"
                android:backgroundTint="#FFFFFF"
                android:padding="5dp"
                android:progress="30"
                android:progressBackgroundTint="#DFD2D2"
                android:progressTint="#8BC34A" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/button_money"
                style="@android:style/Widget.DeviceDefault.Button.Borderless"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center" />

            <ProgressBar
                android:id="@+id/progress_money"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:background="#E1DDDD"
                android:backgroundTint="#FFFFFF"
                android:padding="5dp"
                android:progress="30"
                android:progressBackgroundTint="#DFD2D2"
                android:progressTint="#8BC34A" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/button_relationships"
                style="@android:style/Widget.DeviceDefault.Button.Borderless"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center" />

            <ProgressBar
                android:id="@+id/progress_relationships"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:background="#E1DDDD"
                android:backgroundTint="#FFFFFF"
                android:padding="5dp"
                android:progress="30"
                android:progressBackgroundTint="#DFD2D2"
                android:progressTint="#8BC34A" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_story"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/image_story"
            android:layout_width="match_parent"
            android:layout_height="400dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonLeftEvent"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/arrow_button"
                android:foreground="@drawable/arrow_button"
                android:onClick="onClickArrow" />

            <Button
                android:id="@+id/buttonRightEvent"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/arrow_button"
                android:foreground="@drawable/arrow_button"
                android:onClick="onClickArrow" />
        </LinearLayout>

        <Button
            android:id="@+id/buttonAccept"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/arrow_button"
            android:text="@string/go" />
    </LinearLayout>

</LinearLayout>